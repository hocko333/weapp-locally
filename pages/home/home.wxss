/* pages/home/home.wxss */
.banner {
  width: 750rpx;
  height: 360rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}
.service {
  display: grid;
  grid-template-columns: repeat(3, 250rpx);
  grid-template-rows: repeat(3, 250rpx);
}
.item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}
.item:nth-child(3n) {
  border-right: 0;
}
.item image {
  width: 60rpx;
  height: 60rpx;
}
.item text {
  font-size: 12px;
  color: #777;
}